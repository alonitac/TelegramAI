FROM mysql:latest

MAINTAINER IlyaPolonsky

RUN chown -R mysql:root /var/lib/mysql/

ARG MYSQL_DB_NAME
ARG MYSQL_ROOT_USER
ARG MYSQL_ROOT_PASSWORD
ARG MYSQL_PASSWORD

ENV MYSQL_DATABASE=$MYSQL_DATABASE
ENV MYSQL_USER=$MYSQL_USER
ENV MYSQL_PASSWORD=$MYSQL_PASSWORD
ENV MYSQL_ROOT_PASSWORD=$MYSQL_ROOT_PASSWORD

ADD /appdata/db/init/initmysql.sql /etc/mysql/initmysql.sql

RUN sed -i 's/MYSQL_DATABASE/'$MYSQL_DATABASE'/g' /etc/mysql/initmysql.sql
RUN cp /etc/mysql/initmysql.sql /docker-entrypoint-initdb.d

EXPOSE 3306